#!/bin/zsh
#XSECURELOCK_PASSWORD_PROMPT = time, time_hex, kaomoji, emoticon, emoji, cursor, asterisk, hidden
#XSECURELOCK_DATETIME_FORMAT
env XSECURELOCK_AUTH_BACKGROUND_COLOR=#000 \
	XSECURELOCK_AUTH_FOREGROUND_COLOR=#0A0 \
	XSECURELOCK_AUTH_WARNING_COLOR=#A00 \
	XSECURELOCK_DIM_ALPHA="0.5" \
	XSECURELOCK_DIM_COLOR=#333 \
	XSECURELOCK_DIM_FPS=60 \
	XSECURELOCK_AUTH_TIMEOUT=5 \ 
	XSECURELOCK_PASSWORD_PROMPT=time_hex \
	XSECURELOCK_SHOW_DATETIME=1 \
	xsecurelock
